{
  "name": "adam-lang",
  "displayName": "Adam Language",
  "description": "Language support for the Adam programming language",
  "version": "0.1.0",
  "publisher": "adam-lang",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:adam"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "adam",
        "aliases": [
          "Adam",
          "adam"
        ],
        "extensions": [
          ".adam"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "adam",
        "scopeName": "source.adam",
        "path": "./syntaxes/adam.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "typescript": "^5.3.0"
  }
}
